@model StepVM

<!DOCTYPE html>

<html>
<head>
    <title>Create New Step</title>
</head>
<body>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                @* <h2 class="text-black py-2"> @(Model.Step.StepId!=0?"Update":"Create New") Step</h2> *@
                <h2 class="text-black py-2"> Create/Edit Step</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Step.StepId" hidden> 
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly"></div>
                 <div class="form-floating py-2 col-12">
                     <select asp-for="@Model.Step.Roadmap.RoadmapId" asp-items="@Model.RoadmapList" class="form-control border-0 shadow">
                         <option disabled selected>--Select Category--</option>
                     </select>
                     <label asp-for="Step.Roadmap.RoadmapId" class="ms-2"></label>
                     <span asp-validation-for="Step.Roadmap.RoadmapId" class="text-danger"></span>
                 </div>
                 <div class="form-floating py-2 col-12">
                     <input asp-for="Step.Title" class="form-control border-0 shadow"/>
                     <label asp-for="Step.Title" class="ms-2"></label>
                     <span asp-validation-for="Step.Title" class="text-danger"></span>
                 </div>
                 <div class="form-floating py-2 col-12">
                     <input asp-for="Step.StepNo" class="form-control border-0 shadow"/>
                     <label asp-for="Step.StepNo" class="ms-2"></label>
                     <span asp-validation-for="Step.StepNo" class="text-danger"></span>
                 </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @* @if (Model.Step.StepId != 0) *@
                        @* { *@
                        @* <button type="submit" class="btn btn-primary form-control">Edit</button> *@
                        @* } *@
                        @* else *@
                        @* { *@
                        @* <button type="submit" class="btn btn-primary form-control">Create</button> *@
                        @* } *@
                        <button type="submit" class="btn btn-primary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Roadmap" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</body>
</html>

